

<%# This ccould go on _form "partial" in the future ---> refactor%>

<%= form_with model: @driver, class: "edit_driver" do |f|%>
    <h2>Use this form to edit the driver's info!</h2>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :vin %>
    <%= f.text_field :vin %>

    <%= f.submit "Edit Driver", class: "driver-form_submit-btn"%>

<% end %>


<%= link_to "Back to Driver's Information", driver_path(@driver.id)%>